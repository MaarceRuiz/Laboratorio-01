<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/CantD_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/cantidad_de_dinero"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calculate_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/value_"
        android:textColor="@color/black"
        android:textSize="@dimen/value_dimen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CantD_text_view" />

    <ImageView
        android:id="@+id/five_cents_image_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/height_image"
        android:layout_marginStart="@dimen/small_gap"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toStartOf="@+id/ten_cents_imagen_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate_text_view"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/ten_cents_imagen_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/height_image"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="@dimen/small_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/calculate_text_view"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/quarter_image_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/height_image"
        android:layout_marginStart="@dimen/small_gap"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toStartOf="@+id/one_dollar_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_cents_text_view"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/one_dollar_image_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/height_image"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="@dimen/small_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/quarter_image_view"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_text_view"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/five_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:textColor="@color/black"
        android:text="@string/five_cents_text"
        android:textSize="@dimen/size_money"
        app:layout_constraintEnd_toEndOf="@+id/five_cents_image_view"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/five_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/five_cents_image_view" />

    <TextView
        android:id="@+id/ten_cents_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="@string/ten_cents_text_view"
        android:textSize="@dimen/size_money"
        app:layout_constraintEnd_toEndOf="@+id/ten_cents_imagen_view"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/ten_cents_imagen_view"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_imagen_view" />

    <TextView
        android:id="@+id/quarter_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="@string/quarter_text"
        android:textSize="@dimen/size_money"
        app:layout_constraintEnd_toEndOf="@+id/quarter_image_view"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/quarter_image_view"
        app:layout_constraintTop_toBottomOf="@+id/quarter_image_view" />

    <TextView
        android:id="@+id/one_dollar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="@string/dollar_text"
        android:textSize="@dimen/size_money"
        app:layout_constraintEnd_toEndOf="@+id/one_dollar_image_view"
        app:layout_constraintStart_toStartOf="@+id/one_dollar_image_view"
        app:layout_constraintTop_toBottomOf="@+id/one_dollar_image_view" />
</androidx.constraintlayout.widget.ConstraintLayout>